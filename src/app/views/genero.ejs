<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Libreria</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">El Libro</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link "  href="/prestamos">Prestamos</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/libros">Libros</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/personas">Personas</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/datos_anexos">Datos Anexos</a>
          </li>
        </ul>
        <form class="d-flex" role="search">
          <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Buscar">
          <button class="btn btn-outline-success" type="submit">Buscar</button>
        </form>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="row">
      <div class="col-md-6 mt-4 text-center">
        <h1 class="card-title text-center my-5">Generos</h1>
        <table class="table table-striped">
          <tr>
            <th>ID</th>
            <th>GENERO</th>
            <th> </th>
          </tr>
          <% for(var i=0; i< generos.length ;i++) { %>
            <tr>
              <td><%= generos[i].id_genero %></td>
              <td><%= generos[i].genero %></td>
              <td><a href="/borrar_genero/<%= generos[i].id_genero %>" class="btn btn-danger">BORRAR</a>
              <a href="/editar_genero/<%= generos[i].id_genero %>" class="btn btn-info">EDITAR</a></td>
            </tr>
          <% } %>
        </table>
      </div>

      <div class="col-md-6 mt-4 card">
        <form action="/generos" method="post" class="card-body">
          <h3 class="card-title">Agregar Generos</h3>
          <div class="form-group mt-4">
            <input type="text" name="genero" class="form-control">
          </div>
          <input type="submit" class="btn btn-primary my-4" value="Guardar">
        </form>
      </div>
    </div>

  </div>

</body>
</html>