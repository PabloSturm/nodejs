<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Libreria</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">El Libro</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link "  href="/prestamos"
                >Prestamos</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/libros">Libros</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/personas">Personas</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/datos_anexos">Datos Anexos</a>
            </li>
          </ul>
          <form class="d-flex" role="search">
            <input
              class="form-control me-2"
              type="search"
              placeholder="Buscar"
              aria-label="Buscar"
            />
            <button class="btn btn-outline-success" type="submit">
              Buscar
            </button>
          </form>
        </div>
      </div>
    </nav>

    <div class="container">
      <div class="row">
        <div class="col-md-12 mt-4 text-center">
          <table class="table table-striped">
            <tr>
              <th>ID</th>
              <th>Título</th>
              <th>Autor</th>
              <th>Editorial</th>
              <th>Edición</th>
              <th>Genero</th>
              <th>Formato</th>
              <th>ISBN</th>
              <th>Reseña</th>
              <th></th>
            </tr>
            <% for(var i=0; i< libros.length ;i++) { %>
            <tr>
              <td><%= libros[i].id_libro %></td>
              <td><%= libros[i].titulo %></td>
              <td><%= libros[i].autor %></td>
              <td><%= libros[i].editorial %></td>
              <td><%= (libros[i].fec_edicion).toLocaleDateString("es-AR") %></td>
              <td><%= libros[i].nombre_genero %></td>
              <td><%= libros[i].formato %></td>
              <td><%= libros[i].isbn %></td>
              <td><%= libros[i].resenia %></td>
              <td>
                <a
                  href="/borrar_libro/<%= libros[i].id_libro %>"
                  class="btn btn-danger"
                  >BORRAR</a
                >
                <a
                  href="/editar_libro/<%= libros[i].id_libro %>"
                  class="btn btn-info"
                  >EDITAR</a
                >
              </td>
            </tr>
            <% } %>
          </table>
        </div>

        <div class="col-md-8 mt-4 mx-auto card">
          <form action="/libro" method="post" class="card-body">
            <h3 class="card-title">Agregar Libro</h3>
            <div class="row">
              <div class="form-group col-md-6 mt-3">
                <label for="">Título</label>
                <input type="text" name="titulo" class="form-control" />
              </div>
              <div class="form-group col-md-6 mt-3">
                <label for="">Autor</label>
                <input type="text" name="autor" class="form-control" />
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-3 mt-3">
                <label for="">Editorial</label>
                <input type="text" name="editorial" class="form-control" />
              </div>
              <div class="form-group col-md-3 mt-3">
                <label for="">Edición</label>
                <input type="date" name="fec_edicion" class="form-control" />
              </div>
              <div class="form-group col-md-3 mt-3">
                <label for="">Genero</label>
                <select name="id_generos" class="form-control" >
                  <% genero_libros.forEach(genero_libro=>{%>
                    <option value="<%= genero_libro.id_generos %>"><%= genero_libro.nombre_genero %></option>
                    <%})%>
                </select>
              </div>
              <div class="form-group col-md-3 mt-3">
                <label for="">Formato</label>
                <input type="text" name="formato" class="form-control" />
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-5 mt-3">
                <label for="">ISBN</label>
                <input type="text" name="isbn" class="form-control" />
              </div>
              <div class="form-group col-md-7 mt-3">
                <label for="">Reseña</label>
                <input type="text" name="resenia" class="form-control" />
              </div>
            </div>     
            <input type="submit" class="btn btn-primary my-4" value="Guardar" />
          </form>
        </div>
      </div>
    </div>

    
  </body>
</html>
