<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Libreria</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">El Libro</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link " href="/prestamos"
                >Prestamos</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/libros">Libros</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/personas">Personas</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/datos_anexos">Datos Anexos</a>
            </li>
          </ul>
          <form class="d-flex" role="search">
            <input
              class="form-control me-2"
              type="search"
              placeholder="Buscar"
              aria-label="Buscar"
            />
            <button class="btn btn-outline-success" type="submit">
              Buscar
            </button>
          </form>
        </div>
      </div>
    </nav>

    <div class="container">
      <div class="row">
        <div class="col-md-12 mt-4 text-center">
          <table class="table table-striped">
            <tr>
              <th>ID</th>
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Fecha Nac</th>
              <th>ID Genero</th>
              <th>Genero</th>
              <th>DNI</th>
              <th>Direccion</th>
              <th>Localidad</th>
              <th>ID Pcia</th>
              <th>Provincia</th>
              <th>Telefono</th>
              <th>E-mail</th>
              <th>Fecha Alta</th>
              <th></th>
            </tr>
            <% for(var i=0; i< personas.length ;i++) { %>
            <tr>
              <td><%= personas[i].id_persona %></td>
              <td><%= personas[i].nombre %></td>
              <td><%= personas[i].apellido %></td>
              <td><%= (personas[i].fecha_nac).toLocaleDateString("es-AR") %></td>
              <td><%= personas[i].id_genero %></td>
              <td><%= personas[i].genero %></td>
              <td><%= personas[i].dni %></td>
              <td><%= personas[i].direccion %></td>
              <td><%= personas[i].localidad %></td>
              <td><%= personas[i].id_provincia %></td>
              <td><%= personas[i].provincia %></td>
              <td><%= personas[i].telefono %></td>
              <td><%= personas[i].email %></td>
              <td><%= (personas[i].fecha_alta).toLocaleDateString("es-AR") %></td>
              <td>
                <a
                  href="/borrar_persona/<%= personas[i].id_persona %>"
                  class="btn btn-danger"
                  >BORRAR</a
                >
                <a
                  href="/editar_persona/<%= personas[i].id_persona %>"
                  class="btn btn-info"
                  >EDITAR</a
                >
              </td>
            </tr>
            <% } %>
          </table>
        </div>

        <div class="col-md-8 mt-4 mx-auto card">
          <form action="/persona" method="post" class="card-body">
            <h3 class="card-title">Agregar Personas</h3>
            <div class="row">
              <div class="form-group col-md-6 mt-3">
                <label for="">Nombre</label>
                <input type="text" name="nombre" class="form-control" />
              </div>
              <div class="form-group col-md-6 mt-3">
                <label for="">Apellido</label>
                <input type="text" name="apellido" class="form-control" />
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-3 mt-3">
                <label for="">DNI</label>
                <input type="text" name="dni" class="form-control" />
              </div>
              <div class="form-group col-md-3 mt-3">
                <label for="">Fec Nac</label>
                <input type="date" name="fecha_nac" class="form-control" />
              </div>
              <div class="form-group col-md-3 mt-3">
                <label for="">Genero</label>
                <select name="id_genero" class="form-control" >
                  <% generos.forEach(genero=>{%>
                    <option value="<%= genero.id_genero %>"><%= genero.genero %></option>
                    <%})%>
                </select>
              </div>
              <div class="form-group col-md-3 mt-3">
                <label for="">Telefono</label>
                <input type="text" name="telefono" class="form-control" />
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-5 mt-3">
                <label for="">E-mail</label>
                <input type="text" name="email" class="form-control" />
              </div>
              <div class="form-group col-md-7 mt-3">
                <label for="">Direccion</label>
                <input type="text" name="direccion" class="form-control" />
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-4 mt-3">
                <label for="">Localidad</label>
                <input type="text" name="localidad" class="form-control" />
              </div>
              <div class="form-group col-md-4 mt-3">
                <label for="">Provincia</label>
                <select name="id_provincia" class="form-control">
                  <% provincias.forEach(provincia=>{%>
                    <option value="<%= provincia.id_provincia %>"><%= provincia.provincia %></option>
                    <%})%>
                </select>
              </div>
              <div class="form-group col-md-4 mt-3">
                <label for="">Fecha Alta</label>
                <input type="date" name="fecha_alta" class="form-control" />
              </div>
            </div>
            <input type="submit" class="btn btn-primary my-4" value="Guardar" />
          </form>
        </div>
      </div>
    </div>

    
  </body>
</html>
